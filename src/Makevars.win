ifeq "$(WIN)" "64"
ICONVBIN=iconv-2
LIB_ICONV=${LIB_ICONV64}
else
ICONVBIN=iconv
endif

PKG_CPPFLAGS = -I${LIB_ICONV}/include -I${GEOS_HOME}/include -I$(GDAL_HOME)/include -DRSQLITE_USE_BUNDLED_SQLITE -DSQLITE_ENABLE_RTREE -DSQLITE_ENABLE_FTS3 -DSQLITE_ENABLE_FTS3_PARENTHESIS -DSQLITE_SOUNDEX
PKG_LIBS = -L${LIB_ICONV}/bin -l$(ICONVBIN) -L$(GDAL_HOME)/lib -lproj -L${GEOS_HOME}/lib -lgeos_c -lgeos -lstdc++
